<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="@dimen/mainTab_height_big"
             android:paddingTop="@dimen/mainTab_marginTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainTab_height"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="7dp">

        <com.cornflower1991.tabsView_lib.CompoundFontIconImageView
            android:id="@+id/fontIcon_fontTabView_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center_horizontal"
            app:cfiiv_checked_icon="tab_home_selected"
            app:cfiiv_icon="tab_home"/>

        <TextView
            android:id="@+id/text_fontTabView_name"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="10dp"
            tools:ignore="SpUsage"
            tools:text="推荐"/>
    </LinearLayout>

    <com.cornflower1991.tabsView_lib.RedDotView
        android:id="@+id/redDot_fontTabView_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>